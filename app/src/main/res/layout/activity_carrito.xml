<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".carrito">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_regresar"
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/retro" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fondo" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerViewCarrito"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/tvSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/hanken_grotesks"
        android:text="Subtotal: S/ 0.00" />

    <Button
        android:id="@+id/btn_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PUNTO DE ENTREGA"
        android:textColor="#FFFFFF"
        android:backgroundTint="#898484"
        android:fontFamily="@font/hanken_grotesks"
        android:padding="16dp"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_ir_comprar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a Comprar"
        android:fontFamily="@font/hanken_grotesks"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EA5647"
        android:padding="16dp"
        android:layout_margin="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estilofondo">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/menu" />

        <ImageButton
            android:id="@+id/btn_carrito"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginLeft="175dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/carrito" />

        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="330dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/barraperf" />

    </RelativeLayout>

</LinearLayout>