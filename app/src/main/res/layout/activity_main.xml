<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEBEB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/fondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:background="@drawable/estilofondo"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Inicio de Sesión"
            android:fontFamily="@font/hanken_grotesks"
            android:textColor="#FFFBFB"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Email"
            android:textColor="#FFFBFB"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="334dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/hanken_grotesks"
            android:elevation="8dp"
            android:background="@drawable/estilotexto"
            android:hint="email@outlook.com"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Contraseña"
            android:textColor="#FFFBFB"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etContrasenia"
            android:layout_width="334dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:fontFamily="@font/hanken_grotesks"
            android:layout_marginTop="8dp"
            android:background="@drawable/estilotexto"
            android:hint="8 caracteres"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/hanken_grotesks"
            android:backgroundTint="#EA5647"
            android:text="Aceptar" />

        <TextView
            android:id="@+id/tv_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/hanken_grotesks"
            android:text="No tienes cuenta CREAR UNA"
            android:textColor="#063986"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>