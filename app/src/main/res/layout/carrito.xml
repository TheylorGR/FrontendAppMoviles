<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Nombre del Producto"
            android:fontFamily="@font/hanken_grotesks"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginStart="110dp"/>

        <ImageView
            android:id="@+id/ivImagenProducto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvPrecioProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/hanken_grotesks"
                android:text="precio"
                android:textColor="#9E9A9A"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnEliminarProducto"
                android:src="@drawable/trash"
                android:layout_marginStart="100dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@null"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/btnDisminuirCantidad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/menos"
                android:layout_marginStart="140dp"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tvCantidadProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:fontFamily="@font/hanken_grotesks"
                android:layout_toEndOf="@id/btnDisminuirCantidad"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btnAumentarCantidad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mas"
                android:background="@null"
                android:scaleType="centerInside"
                android:layout_toEndOf="@id/tvCantidadProducto"
                android:layout_marginStart="10dp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>